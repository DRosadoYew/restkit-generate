#!/usr/bin/env ruby

THIS_FILE = File.symlink?(__FILE__) ? File.readlink(__FILE__) : __FILE__
lib = File.expand_path(File.dirname(THIS_FILE) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'optparse'
require 'generator'

options = {}

optparse = OptionParser.new do |opts|
  opts.banner = "Usage: restkit-generate model NAME [field:type field:type] [options]"
  
  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
  
  opts.on("-p prefix", "--[no-]prefix", "Prefix, default: Base") do |p|
    options[:prefix] = p
  end
end

begin
  optparse.parse!
rescue OptionParser::InvalidOption, OptionParser::MissingArgument
  puts optparse
  exit
end

Generator.configure(options)

begin
  Generator.validate!
rescue ArgumentError => error
  puts error
  exit
end

Generator::Header.make
Generator::MakeFile.make
